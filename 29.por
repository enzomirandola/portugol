programa
{
    funcao inicio()
    {
        inteiro numero

        escreva("Digite um número: ")
        leia(numero)

        se (numero % 7 == 0 e numero % 3 == 0)
            escreva("Sim")

        se (numero % 7 != 0 ou numero % 3 != 0)
            escreva("Não")
    }
}

